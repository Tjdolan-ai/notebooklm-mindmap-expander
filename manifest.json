{
  "manifest_version": 3,
  "name": "NotebookLM Mind Map Expander Pro",
  "version": "0.2.0",
  "description": "Enhances NotebookLM mind maps with advanced controls like partial expansion, export, search, and themes.",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://notebooklm.google.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["dist/expander.js"],
      "css": ["injected_styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Mind Map Expander Pro",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": ["welcome.html", "welcome.css", "welcome.js", "options.html", "options.js", "injected_styles.css"],
      "matches": ["https://notebooklm.google.com/*"]
    }
  ]
}