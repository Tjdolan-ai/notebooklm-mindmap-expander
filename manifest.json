{
  "manifest_version": 3,
  "name": "NotebookLM Mind Map Expander",
  "version": "1.0.0",
  "description": "Automatically expand and manage mind maps in Google NotebookLM",
  "author": "Visionary42",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://notebooklm.google.com/*"
      ],
      "js": [
        "dist/expander.js"
      ],
      "css": [
        "injected_styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "expand-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Expand all mind map nodes"
    },
    "collapse-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Collapse all mind map nodes"
    }
  }
}